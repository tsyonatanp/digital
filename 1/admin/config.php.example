<?php
session_start();

// הגדרות אבטחה
define('ADMIN_USERNAME', 'admin');
define('ADMIN_PASSWORD', 'your_secure_password_here');

// הגדרות חיבור לבסיס הנתונים
define('DB_HOST', 'localhost');
define('DB_USER', 'your_db_username');
define('DB_PASS', 'your_db_password');
define('DB_NAME', 'your_db_name');

// הגדרות נוספות
define('MAX_BUILDINGS', 100);
define('ALLOWED_EXTENSIONS', ['jpg', 'jpeg', 'png', 'gif']);

// פונקציות עזר
function get_db_connection() {
    $conn = new mysqli(DB_HOST, DB_USER, DB_PASS, DB_NAME);
    if ($conn->connect_error) {
        die("Connection failed: " . $conn->connect_error);
    }
    $conn->set_charset("utf8mb4");
    return $conn;
}

function check_auth() {
    if (!isset($_SESSION['admin_logged_in']) || $_SESSION['admin_logged_in'] !== true) {
        header('Location: login.php');
        exit;
    }
}

function get_buildings_list() {
    $conn = get_db_connection();
    $stmt = $conn->prepare("SELECT id, name, address FROM buildings ORDER BY name");
    $stmt->execute();
    $result = $stmt->get_result();
    $buildings = [];
    while ($row = $result->fetch_assoc()) {
        $buildings[] = $row;
    }
    $stmt->close();
    $conn->close();
    return $buildings;
}

function create_building($name, $address, $password) {
    $conn = get_db_connection();
    
    // בדיקה אם הבניין כבר קיים
    $stmt = $conn->prepare("SELECT id FROM buildings WHERE name = ?");
    $stmt->bind_param("s", $name);
    $stmt->execute();
    $result = $stmt->get_result();
    if ($result->num_rows > 0) {
        $stmt->close();
        $conn->close();
        return false;
    }
    
    // יצירת הבניין
    $hashed_password = password_hash($password, PASSWORD_DEFAULT);
    $stmt = $conn->prepare("INSERT INTO buildings (name, address, password) VALUES (?, ?, ?)");
    $stmt->bind_param("sss", $name, $address, $hashed_password);
    $success = $stmt->execute();
    $stmt->close();
    $conn->close();
    return $success;
}

function delete_building($id) {
    $conn = get_db_connection();
    
    // מחיקת כל ההודעות והמודעות של הבניין
    $stmt = $conn->prepare("DELETE FROM messages WHERE building_id = ?");
    $stmt->bind_param("i", $id);
    $stmt->execute();
    $stmt->close();
    
    $stmt = $conn->prepare("DELETE FROM ads WHERE building_id = ?");
    $stmt->bind_param("i", $id);
    $stmt->execute();
    $stmt->close();
    
    // מחיקת הבניין
    $stmt = $conn->prepare("DELETE FROM buildings WHERE id = ?");
    $stmt->bind_param("i", $id);
    $success = $stmt->execute();
    $stmt->close();
    $conn->close();
    return $success;
}

function create_tables() {
    $conn = get_db_connection();
    
    // יצירת טבלת buildings
    $sql = "CREATE TABLE IF NOT EXISTS buildings (
        id INT AUTO_INCREMENT PRIMARY KEY,
        name VARCHAR(255) NOT NULL UNIQUE,
        address TEXT NOT NULL,
        password VARCHAR(255) NOT NULL,
        created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
    )";
    if (!$conn->query($sql)) {
        $conn->close();
        return false;
    }
    
    // יצירת טבלת messages
    $sql = "CREATE TABLE IF NOT EXISTS messages (
        id INT AUTO_INCREMENT PRIMARY KEY,
        building_id INT NOT NULL,
        message TEXT NOT NULL,
        created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
        FOREIGN KEY (building_id) REFERENCES buildings(id) ON DELETE CASCADE
    )";
    if (!$conn->query($sql)) {
        $conn->close();
        return false;
    }
    
    // יצירת טבלת ads
    $sql = "CREATE TABLE IF NOT EXISTS ads (
        id INT AUTO_INCREMENT PRIMARY KEY,
        building_id INT NOT NULL,
        type ENUM('top', 'bottom') NOT NULL,
        image_path VARCHAR(255) NOT NULL,
        created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
        FOREIGN KEY (building_id) REFERENCES buildings(id) ON DELETE CASCADE
    )";
    if (!$conn->query($sql)) {
        $conn->close();
        return false;
    }
    
    $conn->close();
    return true;
} 